        tools:text="@string/appinfo_references_url_road_signs" />

    <TextView
        android:id="@+id/app_info_snack_engage"
        style="@style/AppInfo.WebLink"
        tools:text="@string/appinfo_references_url_snack_engage" />

    <TextView
        android:id="@+id/app_info_trace_droid"
        style="@style/AppInfo.WebLink"
        tools:text="@string/appinfo_references_url_trace_droid" />

    <TextView
        android:id="@+id/app_info_typed_preferences"
        style="@style/AppInfo.WebLink"
        tools:text="@string/appinfo_references_url_typed_preferences" />

