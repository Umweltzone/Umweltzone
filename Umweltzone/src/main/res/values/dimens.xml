<resources>

    <dimen name="tiny_spacer">1dp</dimen>
    <dimen name="small_spacer">2dp</dimen>
    <dimen name="medium_spacer">4dp</dimen>
    <dimen name="big_spacer">8dp</dimen>
    <dimen name="large_spacer">16dp</dimen>
    <dimen name="huge_spacer">32dp</dimen>
    <dimen name="wide_spacer">64dp</dimen>
    <dimen name="long_spacer">128dp</dimen>

    <dimen name="horizontal_line_height">1dp</dimen>

    <!-- Text size -->
    <dimen name="body_text_size">14sp</dimen>
    <dimen name="headline_text_size">16sp</dimen>

    <!-- Line spacing -->
    <item name="text_line_spacing" format="float" type="dimen">1.0</item>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <integer name="shape_stroke_width">5</integer>

    <dimen name="fragment_title">32sp</dimen>
    <dimen name="activity_horizontal_margin">@dimen/large_spacer</dimen>
    <dimen name="activity_vertical_margin">@dimen/large_spacer</dimen>
    <dimen name="city_zone_badge_stroke_width">2dp</dimen>
    <dimen name="city_zone_badge_width">50dp</dimen>
    <dimen name="city_zone_badge_height">@dimen/city_zone_badge_width</dimen>

    <!-- Details -->
    <dimen name="details_content_padding">@dimen/medium_spacer</dimen>
    <dimen name="details_margin_horizontal">@dimen/big_spacer</dimen>
    <dimen name="details_margin_vertical">@dimen/big_spacer</dimen>

    <!-- Zones -->
    <dimen name="zones_margin_horizontal">@dimen/big_spacer</dimen>
    <dimen name="zones_margin_vertical">@dimen/big_spacer</dimen>

</resources>
