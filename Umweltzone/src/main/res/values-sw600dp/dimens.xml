<resources>
    <!-- Customize dimensions originally defined in res/values/dimens.xml (such as
         screen margins) for sw600dp devices (e.g. 7" tablets) here. -->
    <dimen name="activity_horizontal_margin">128dp</dimen>

    <!-- Text size -->
    <dimen name="body_text_size">20sp</dimen>
    <dimen name="headline_text_size">22sp</dimen>

    <!-- Line spacing -->
    <item name="text_line_spacing" format="float" type="dimen">1.2</item>

    <!-- Details -->
    <dimen name="details_content_padding">@dimen/big_spacer</dimen>
    <dimen name="details_margin_horizontal">@dimen/wide_spacer</dimen>

    <!-- Zones -->
    <dimen name="zones_margin_horizontal">@dimen/wide_spacer</dimen>

</resources>
